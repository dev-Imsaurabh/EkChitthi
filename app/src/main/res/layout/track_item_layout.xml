<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="200dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#E6D6A7"
        android:id="@+id/rl"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:id="@+id/ll_stamp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/stamp_border"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/stamp_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/basic_stamp">

            </ImageView>

        </RelativeLayout>


        <TextView
            android:id="@+id/recipient_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_stamp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="+91639356673" />

        <View
            android:layout_width="150dp"
            android:background="@color/black"
            android:layout_height="1dp"
            android:id="@+id/b1"
            android:layout_below="@+id/recipient_number"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"/>


        <TextView
            android:id="@+id/from_city"
            android:layout_width="160dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@id/b1"

            android:layout_alignParentRight="true"
            android:text="From: Varanasi" />

        <View
            android:layout_width="150dp"
            android:background="@color/black"
            android:layout_height="1dp"
            android:id="@+id/b2"
            android:layout_below="@+id/from_city"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/to_city"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/b2"
            android:layout_alignParentRight="true"
            android:text="To: Mumbai" />
        <View
            android:layout_width="150dp"
            android:background="@color/black"
            android:layout_height="1dp"
            android:id="@+id/b3"
            android:layout_below="@+id/to_city"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"/>


        <View
            android:layout_width="2dp"
            android:layout_margin="4dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/black" />

        <TextView
            android:id="@+id/msg_box"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/letter_border"
            android:ellipsize="end"
            android:fontFamily="@font/quikhand"
            android:maxLines="5"
            android:padding="8dp"
            android:text="Hello dishi , kya haal baccha i hope you are enjoying. party ,,,,party horhi horhi party" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_margin="4dp"
            app:lottie_rawRes="@raw/truck"
            app:lottie_speed="1" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/animationView"
            android:text="Delivery date: "
            android:textColor="@color/black"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/msg_box"
            android:layout_marginStart="70dp"
            android:layout_marginTop="4dp"
            android:drawableRight="@drawable/ic_invalid"
            android:text="Not opened" />


    </RelativeLayout>



</androidx.cardview.widget.CardView>
