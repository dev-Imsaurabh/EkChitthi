<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp"
    android:layout_gravity="center"
    app:cardElevation="10dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_dialog_stamp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_pb"
            android:layout_centerInParent="true"/>

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:id="@+id/dummyTxt"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:textStyle="bold"
            android:id="@+id/no_stamp_info"
            android:text="You don't have any stamp in your stamp box"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gen_btn"
            android:visibility="gone"
            android:layout_below="@+id/no_stamp_info"
            android:text="Generate Stamp"
            android:drawableLeft="@drawable/ic_setting"
            android:background="@drawable/border1"
            android:padding="16dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>







</com.google.android.material.card.MaterialCardView>